<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/microcms.css" rel="stylesheet">
        <title> {{title}} </title>
    </head>
    <body>
        <div class="container">
            {{ form_start(nomineForm, { 'attr': {'class': 'form-horizontal'} }) 
            }}
            <!-- Nom
                =============================================================-->
            <div class="form-group">
                {{ form_label(nomineForm.nom, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_errors(nomineForm.nom) }}
                    {{ form_widget(nomineForm.nom, { 'attr':  {
                'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <!-- liste des categories
            =============================================================-->
            <div class="form-group">
                {{ form_label(nomineForm.categorie, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
                }}) }}

                <div class="col-sm-6">
                    {{ form_errors(nomineForm.categorie) }}
                    {{ form_widget(nomineForm.categorie, { 'attr':  {
                'class': 'form-control'
                    }}) }}
                </div>

            </div>

            <!-- Descriptif
            =============================================================-->
            <div class="form-group">
                {{ form_label(nomineForm.descriptif, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_errors(nomineForm.descriptif) }}
                    {{ form_widget(nomineForm.descriptif, { 'attr':  {
                    'rows':4,
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <!-- Actualite
            =============================================================-->
            <div class="form-group">
                {{ form_label(nomineForm.actualite, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_errors(nomineForm.actualite) }}
                    {{ form_widget(nomineForm.actualite, { 'attr':  {
                    'rows':4,
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <!-- Boutton Submit
                =============================================================-->      
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-3">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>
            {{ form_end(nomineForm) }}
        </div>

        <!-- jQuery -->
        <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
        <!-- JavaScript Boostrap plugin -->
        <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
    </body>
</html>


