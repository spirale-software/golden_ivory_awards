<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/public_layout.css" rel="stylesheet">

        <title>MicroCMS - {% block title %}{% endblock %}</title>

        <!--[Style]
            =================================================================-->
        <style type="text/css">
            body {
                background-image: url('{{ app.request.basepath }}/../images/oscar.jpg');
            }

            p {
                color:white;
            }
        </style>
        <!--[/Style]
            =====================================================================-->
    </head>

    <body>      

        <div class="container container-style" style="opacity:0.9;">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid" style="background-color:white">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="{{ app.request.basepath }}/../images/logo.png" width="125" class="navbar-left">
                        <a class="navbar-brand" href="{{ path('home') }}">
                            Golden Ivory Awards
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href=" {{ path('honneur') }} ">Honneurs</a></li>
                            <li><a href=" {{ path('partenaires') }} ">Partenaires</a></li>
                            <li><a href=" {{ path('contact') }} ">Conatct</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

        {% block content %}{% endblock %}

        <footer>
            <div id="footer">
                <div class="row">
                    <div class="col-md-4" style="text-align: center">
                        <a href="{{ path('nomine_all') }}">Se connecter</a>
                    </div>
                    <div class="col-md-4 re" style="text-align: center">
                        <p>Design by - <a href="http://www.spirale-software.com" target="_blank">spirale-software.com</a></p>
                        <p>&copy; Copyright - 2016</p>      
                    </div>
                    <div class="col-md-4 pull-right">
                        <a href="#">
                            <img src="{{ app.request.basepath }}/../images/facebook.png" width="40">
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
