<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/public_layout.css" rel="stylesheet">

        <title>MicroCMS - {% block title %}{% endblock %}</title>

        <!--[Style]
            =================================================================-->
        <style type="text/css">
            body {
                background-image: url('{{ app.request.basepath }}/../images/oscar.jpg');
            }           

            #footer p {
                color:white;
            }

            #entete {
                height:100px;
                background-color: white;
                width: 100%;  

            }

            #entete h2 {
                color: #EFD807;
                padding-top: 0px;
                display: inline-block;
            }

            #entete-image {
                text-align: center;
            }
            #nav { border: 0px}

            .espace { 
                height: 50px;
                background-color: #221F1F;
                opacity: 0.8;
            }

            .social img {border-radius: 25px}

            .social li{display: inline}

            h3 {
                color: white;
                padding-left: 30px
            }

            .marque {
                text-align: center;
          
            }
            .marque p { display: inline}

        </style>
        <!--[/Style]
            =====================================================================-->
    </head>

    <body>      
        <div id="entete">
            <div id="entete-image" class="">             
                <img src="{{ app.request.basepath }}/../images/logo.png" width="100">
                <h2> GOLDEN IVORY AWARDS</h2>               
            </div>
        </div>

        <div class="container container-style" id='nav'>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="{{ path('home') }}">
                            Golden Ivory Awards
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('public_nomine_all') }}">Nominés</a></li>
                            <li><a href=" {{ path('honneur') }} ">Honneurs</a></li>
                            <li><a href=" {{ path('partenaires') }} ">Partenaires</a></li>
                            <li><a href=" {{ path('qui_sommes_nous') }}">Qui sommes nous?</a></li>
                            <li><a href=" {{ path('contact') }} ">Conatct</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

        {% block content %}{% endblock %}

    </div>
    <div class="espace"></div>
    <footer>
        <div id="footer">
            <div class="row">
                <div class="col-md-4" style="text-align: center">
                    <h3>Partenaires</h3>
                    
                </div>
                <div class="col-md-4" style="text-align: center">
                    
                </div>
                <div class="col-md-4">
                    <h3 >Réseaux sociaux</h3>
                    <ul class="social">
                        <li>
                            <a href="#"><img src="{{ app.request.basepath }}/../images/facebook.png" width="40"></a>                           
                        </li>
                        <li>
                            <a href="#"><img src="{{ app.request.basepath }}/../images/twitter.jpg" width="40"></a>                           
                        </li>
                        <li>
                            <a href="#"><img src="{{ app.request.basepath }}/../images/youtube.png" width="40"></a>                           
                        </li>
                    </ul>
                </div>
            </div>
                        
            <div class="marque">
                <p>Design by <a href="http://www.spirale-software.com" target="_blank">spirale-software.com</a></p>
                <p> - &copy; Copyright 2016</p>  
                <a href="{{ path('nomine_all') }}" class="pull-right">Admin</a>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
